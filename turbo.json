{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"//#build:doc": {
			"cache": true,
			"inputs": ["$TURBO_DEFAULT$", "apps/src/**", "libs/src/**"],
			"outputs": ["./docs"]
		},
		"lint": {
			"cache": true
		},
		"lint:svelte": {
			"cache": true
		},
		"lint:ts": {
			"cache": true
		},
		"test": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": ["src/**", "test/**"],
			"outputs": [".coverage/**"]
		}
	},
	"remoteCache": {
		"signature": true
	}
}
