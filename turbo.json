{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{mdx,svelte}"]
		},
		"lint": {
			"cache": true
		},
		"lint:svelte": {
			"cache": true
		},
		"lint:ts": {
			"cache": true
		},
		"test": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": ["src/**", "test/**"],
			"outputs": [".coverage/**"]
		}
	},
	"remoteCache": {
		"signature": true
	}
}
