{
	"name": "workspace",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
	"scripts": {
		"build": "turbo run build",
		"build:doc": "typedoc",
		"build:storybook": "pnpm run --filter \"@xeho91/app-storybook\" build:storybook",
		"changelog": "pnpm changeset add",
		"clean": "pnpm run \"/^clean:.*/\"; rm -rf \"./**/node_modules\" ",
		"clean:cache": "rm -rf \"./node_modules/.cache\" \"./.turbo\" ",
		"clean:docs": "rm -rf \"./docs\" ",
		"clean:test": "rm -rf \"./coverage\" ",
		"dev": "pnpm run --recursive \"dev\" ",
		"dev:test": "pnpm vitest watch --passWithNoTests --typecheck --ui",
		"fix": "pnpm run \"/^fix:.*/\" ",
		"fix:biome": "biome check . --verbose --write",
		"fix:format": "biome format . --verbose --write",
		"fix:js": "biome lint . --verbose --fix --unsafe",
		"fix:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\" \"#./.github/LICENSE_CC-BY-SA-4.0.md\" \"#apps\" \"#libs\" --fix",
		"fix:typos": "typos --verbose --write-changes",
		"lint": "pnpm run \"/^lint:.*/\" ",
		"lint:biome": "biome check . --verbose",
		"lint:format": "biome format . --verbose",
		"lint:js": "biome lint . --verbose",
		"lint:svelte": "turbo run lint:svelte",
		"lint:ts": "turbo run lint:ts",
		"lint:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\" \"#./.github/LICENSE_CC-BY-SA-4.0.md\" \"#apps\" \"#libs\" ",
		"lint:typos": "typos --verbose",
		"serve:doc": "serve \"./docs\" ",
		"test": "turbo run _test",
		"_test": "vitest run --coverage.enabled --coverage.provider=v8 --coverage.reporter=json-summary --coverage.reporter=json",
		"_version": "pnpm changeset version && pnpm fix:format"
	},
	"devDependencies": {
		"tslib": "2.7.0",
		"turbo": "2.1.2"
	},
	"optionalDependencies": {
		"@biomejs/biome": "1.9.0",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.8",
		"@vitest/coverage-v8": "2.1.1",
		"@vitest/ui": "2.1.1",
		"@xeho91/lib-monorepo": "workspace:*",
		"lefthook": "1.7.15",
		"markdownlint-cli2": "0.14.0",
		"serve": "14.2.3",
		"svelte-check": "catalog:",
		"typedoc": "0.26.7",
		"typedoc-plugin-coverage": "3.3.0",
		"typedoc-plugin-mdn-links": "3.2.12",
		"vite": "5.4.5",
		"vitest": "2.1.1"
	}
}
